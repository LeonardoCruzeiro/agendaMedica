public class FormAgenda extends javax.swing.JFrame {

    ConexaoBD conex = new ConexaoBD();
    BeansAgenda agenda = new BeansAgenda();
            
    public FormAgenda() {
        initComponents();
        Calendar data = Calendar.getInstance();
        Date d = data.getTime();
        SimpleDateFormat dateFormat = new SimpleDateFormat("yyyy/MM/dd");
        
        dateFormat.format(d);
        
        String dtHoje;
        dtHoje = dateFormat.format(d);
        String status = "aberto";
        
        preencherTabela("select n_codagenda,c_nomepaciente,c_turnoagenda,d_datagenda,c_statusagenda,c_nomemedico from agenda inner join paciente on n_codpacagenda = n_numepaciente inner join medico on n_codmedicoagenda = n_codmedico where d_datagenda='"+dtHoje+"' and c_statusagenda ='"+status+"' order by c_turnoagenda");
    }

     public void preencherTabela(String Sql){
        ArrayList dados = new ArrayList();
        String [] coluna = new String[]{"codigo","nome","turno","data","status","medico"};
        
        conex.conexao();
        conex.executaSQL(Sql);
        try{
          conex.rs.first();
          do{
           
        dados.add(new Object[]{conex.rs.getInt("n_codagenda"),conex.rs.getString("c_nomepaciente"),conex.rs.getString("c_turnoagenda"),conex.rs.getString("d_datagenda"),conex.rs.getString("c_statusagenda"),conex.rs.getString("c_nomemedico")});
          
          }while(conex.rs.next());
        }catch(SQLException ex){
         JOptionPane.showMessageDialog(null, "Erro ao carregar o ArrayList\n"+ex);
        }     
        ModeloTabela modelo = new ModeloTabela(dados,coluna);
        
        jTableAgendaDoDia.setModel(modelo);
        jTableAgendaDoDia.getColumnModel().getColumn(0).setPreferredWidth(30);
        jTableAgendaDoDia.getColumnModel().getColumn(0).setResizable(false);
        jTableAgendaDoDia.getColumnModel().getColumn(1).setPreferredWidth(220);
        jTableAgendaDoDia.getColumnModel().getColumn(1).setResizable(false);
        jTableAgendaDoDia.getColumnModel().getColumn(2).setPreferredWidth(80);
        jTableAgendaDoDia.getColumnModel().getColumn(2).setResizable(false);
        jTableAgendaDoDia.getColumnModel().getColumn(3).setPreferredWidth(80);
        jTableAgendaDoDia.getColumnModel().getColumn(3).setResizable(false);
        jTableAgendaDoDia.getColumnModel().getColumn(4).setPreferredWidth(80);
        jTableAgendaDoDia.getColumnModel().getColumn(4).setResizable(false);
        jTableAgendaDoDia.getColumnModel().getColumn(5).setPreferredWidth(220);
        jTableAgendaDoDia.getColumnModel().getColumn(5).setResizable(false);
        jTableAgendaDoDia.getTableHeader().setReorderingAllowed(false);
        
        jTableAgendaDoDia.setAutoResizeMode(jTableAgendaDoDia.AUTO_RESIZE_OFF);
        jTableAgendaDoDia.setSelectionMode(ListSelectionModel.SINGLE_SELECTION);
        
        
        conex.desconecta();
    }
