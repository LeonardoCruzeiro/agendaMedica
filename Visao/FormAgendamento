     public void preencherMedico(){
        conex.conexao();
        conex.executaSQL("select c_nomemedico from medico order by c_nomemedico");
        try {
        conex.rs.first();
        jComboBoxMedico.removeAllItems();
        
        do{
            jComboBoxMedico.addItem(conex.rs.getString("c_nomemedico"));
        }while (conex.rs.next());
        } catch (Exception e) {
            JOptionPane.showMessageDialog(rootPane,"Error ao preencher medicos"+ e);
        }
        
        conex.desconecta();
    }
     
     public void preencherTabela(String Sql){
        ArrayList dados = new ArrayList();
        String [] coluna = new String[]{"nome","telefone","endereço","bairro"};
        
        conex.conexao();
        conex.executaSQL(Sql);
        try{
          conex.rs.first();
          do{
           
        dados.add(new Object[]{conex.rs.getString("c_nomepaciente"),conex.rs.getString("c_telepaciente"),conex.rs.getString("c_endpaciente"),conex.rs.getString("c_nomebairro")});
          
          }while(conex.rs.next());
        }catch(SQLException ex){
         JOptionPane.showMessageDialog(null, "Erro ao carregar o ArrayList\n"+ex);
        }     
        ModeloTabela modelo = new ModeloTabela(dados,coluna);
        
        jTablePacienteAgenda.setModel(modelo);
        jTablePacienteAgenda.getColumnModel().getColumn(0).setPreferredWidth(220);
        jTablePacienteAgenda.getColumnModel().getColumn(0).setResizable(false);
        jTablePacienteAgenda.getColumnModel().getColumn(1).setPreferredWidth(80);
        jTablePacienteAgenda.getColumnModel().getColumn(1).setResizable(false);
        jTablePacienteAgenda.getColumnModel().getColumn(2).setPreferredWidth(200);
        jTablePacienteAgenda.getColumnModel().getColumn(2).setResizable(false);
        jTablePacienteAgenda.getColumnModel().getColumn(3).setPreferredWidth(100);
        jTablePacienteAgenda.getColumnModel().getColumn(3).setResizable(false);
       
        
        jTablePacienteAgenda.getTableHeader().setReorderingAllowed(false);
        jTablePacienteAgenda.setAutoResizeMode(jTablePacienteAgenda.AUTO_RESIZE_OFF);
        jTablePacienteAgenda.setSelectionMode(ListSelectionModel.SINGLE_SELECTION);
        
        
        conex.desconecta();
    }
