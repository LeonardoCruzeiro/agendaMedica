    private void jButtonBuscarPacienteActionPerformed(java.awt.event.ActionEvent evt) {                                                      
        preencherTabela("select c_nomepaciente,c_telepaciente,c_endpaciente,c_nomebairro from paciente inner join bairro on n_numepacbairro = n_numebairro where c_nomepaciente like'%"+jTextFieldNome.getText()+"%'");
    }                                                     

    private void jTablePacienteAgendaMouseClicked(java.awt.event.MouseEvent evt) {                                                  
       String nome_paciente = ""+jTablePacienteAgenda.getValueAt(jTablePacienteAgenda.getSelectedRow(),0);
       conex.conexao();
       conex.executaSQL("select * from paciente where c_nomepaciente='"+nome_paciente+"'");
       try{
           conex.rs.first();
           jTextFieldNome.setText(conex.rs.getString("c_nomepaciente"));
           
           }catch(SQLException ex){
           JOptionPane.showMessageDialog(null,"ERRO AO SELECIONAR O ITEM NA TABELA /n"+ex);
       }
       
       conex.desconecta();
       
       jTablePacienteAgenda.setEnabled(true);
       jComboBoxTurno.setEnabled(true);
       jComboBoxMedico.setEnabled(true);
       jDateChooserData.setEnabled(true);
       jButtonCancelarAgendamento.setEnabled(true);
       jButtonFinalizarAgendamento.setEnabled(true);
       jTextFieldMotivo.setEnabled(true);
    }                                                 

    private void jButtonFinalizarAgendamentoActionPerformed(java.awt.event.ActionEvent evt) {                                                            
        agenda.setNomePaciente(jTextFieldNome.getText());
        agenda.setNomeMedico((String)jComboBoxMedico.getSelectedItem());
        agenda.setTurno((String)jComboBoxTurno.getSelectedItem());
        agenda.setMotivo(jTextFieldMotivo.getText());
        agenda.setData(jDateChooserData.getDate());
        agenda.setStatus("Aberto");
        dao.Salvar(agenda);
        
        jTextFieldNome.setText("");
        jTextFieldMotivo.setText("");
        jDateChooserData.setDateFormatString("");
        
        jTablePacienteAgenda.setEnabled(!true);
        jComboBoxTurno.setEnabled(!true);
        jComboBoxMedico.setEnabled(!true);
        jDateChooserData.setEnabled(!true);
        jButtonCancelarAgendamento.setEnabled(!true);
        jButtonFinalizarAgendamento.setEnabled(!true);
        jTextFieldMotivo.setEnabled(!true);
        
    }                                                           

    private void jComboBoxMedicoActionPerformed(java.awt.event.ActionEvent evt) {                                                
        preencherMedico();
    }                                               

    private void jButtonCancelarAgendamentoActionPerformed(java.awt.event.ActionEvent evt) {                                                           
        jTextFieldNome.setText("");
        jTextFieldMotivo.setText("");
        jDateChooserData.setDateFormatString("");
        
        jTablePacienteAgenda.setEnabled(!true);
        jComboBoxTurno.setEnabled(!true);
        jComboBoxMedico.setEnabled(!true);
        jDateChooserData.setEnabled(!true);
        jButtonCancelarAgendamento.setEnabled(!true);
        jButtonFinalizarAgendamento.setEnabled(!true);
        jTextFieldMotivo.setEnabled(!true);
    }                                                          

