    public void preencherBairro(){
        conex.conexao();
        conex.executaSQL("select * from bairro order by c_nomebairro");
        try {
        conex.rs.first();
        jComboBoxBairro.removeAllItems();
        
        do{
            jComboBoxBairro.addItem(conex.rs.getString("c_nomebairro"));
        }while (conex.rs.next());
        } catch (Exception e) {
            JOptionPane.showMessageDialog(rootPane,"Error ao preencher bairros"+ e);
        }
        
        conex.desconecta();
    }
    
    private void jButtonSalvarPacienteActionPerformed(java.awt.event.ActionEvent evt) {                                                      
       
         if(jTextFieldNome.getText().isEmpty()){
            JOptionPane.showMessageDialog(null,"INFORME O NOME");
            jTextFieldNome.requestFocus();
        }else if(jFormattedTextFieldNascimento.getText().isEmpty()){
            JOptionPane.showMessageDialog(null,"INFORME O NASCIMENTO ");
            jFormattedTextFieldNascimento.requestFocus();
        }else if(jTextFieldRG.getText().isEmpty()){
            JOptionPane.showMessageDialog(null, "INFORME O RG");
            jTextFieldRG.requestFocus();
        }else if(jFormattedTextFieldFone.getText().isEmpty()){
            JOptionPane.showMessageDialog(null, "INFORME O TELEFONE ");
            jFormattedTextFieldFone.requestFocus();
        }else if (jTextFieldEndereco.getText().isEmpty()){
            JOptionPane.showMessageDialog(null, "INFORME O ENDERECO");
            jTextFieldEndereco.requestFocus();
        }else if (jTextFieldCEP.getText().isEmpty()){
            JOptionPane.showMessageDialog(null, "INFORME O CEP");
            jTextFieldCEP.requestFocus();
        }else
        
        if (flag==1){
        pac.setPaciNome(jTextFieldNome.getText());
        pac.setPaciNasc(jFormattedTextFieldNascimento.getText());
        pac.setPaciId(jTextFieldRG.getText());
        pac.setPaciFone(jFormattedTextFieldFone.getText());
        pac.setPaciEnd(jTextFieldEndereco.getText());
        pac.setPaciCep(jTextFieldCEP.getText());
        pac.setPaciBairro((String)jComboBoxBairro.getSelectedItem());
        pacdao.Salvar(pac);
        }else{
        pac.setPaciNome(jTextFieldNome.getText());
        pac.setPaciNasc(jFormattedTextFieldNascimento.getText());
        pac.setPaciId(jTextFieldRG.getText());
        pac.setPaciFone(jFormattedTextFieldFone.getText());
        pac.setPaciEnd(jTextFieldEndereco.getText());
        pac.setPaciCep(jTextFieldCEP.getText());
        pac.setPaciBairro((String)jComboBoxBairro.getSelectedItem());
        pac.setPaciCod(Integer.parseInt(jTextFieldCodigoPaciente.getText()));
        pacdao.Editar(pac);  
        }
        jTextFieldNome.setText("");
        jFormattedTextFieldNascimento.setText("");
        jTextFieldRG.setText("");
        jFormattedTextFieldFone.setText("");
        jTextFieldEndereco.setText("");
        jTextFieldCEP.setText("");
        jButtonSalvarPaciente.setEnabled(false);
        jButtonNovoPaciente.setEnabled(true);
    }                                                     

    private void jButtonNovoPacienteActionPerformed(java.awt.event.ActionEvent evt) {                                                    
        flag=1;
        jTextFieldNome.setEnabled(true);
        jFormattedTextFieldNascimento.setEnabled(true);
        jTextFieldRG.setEnabled(true);
        jFormattedTextFieldFone.setEnabled(true);
        jTextFieldEndereco.setEnabled(true);
        jTextFieldCEP.setEnabled(true);
        jButtonSalvarPaciente.setEnabled(true);
        jButtonNovoPaciente.setEnabled(false);
        
        jTextFieldNome.setText("");
        jFormattedTextFieldNascimento.setText("");
        jTextFieldRG.setText("");
        jFormattedTextFieldFone.setText("");
        jTextFieldEndereco.setText("");
        jTextFieldCEP.setText("");
    }                                                   

    private void jButtonEditarPacienteActionPerformed(java.awt.event.ActionEvent evt) {                                                      
        flag=2;
        jButtonEditarPaciente.setEnabled(true);
    }                                                     

    private void jTextFieldNomeActionPerformed(java.awt.event.ActionEvent evt) {                                               
        // TODO add your handling code here:
    }                                              

    private void jButtonBuscarActionPerformed(java.awt.event.ActionEvent evt) {                                              
       pac.setPaciPesquisar(jTextFieldPesquisarPaciente.getText());
       BeansPaciente pac1 = pacdao.buscaPaciente(pac);
       jTextFieldCodigoPaciente.setText(String.valueOf(pac1.getPaciCod()));
       jTextFieldNome.setText(pac1.getPaciNome());
       jFormattedTextFieldNascimento.setText(pac1.getPaciNasc());
       jTextFieldRG.setText(pac1.getPaciId());
       jFormattedTextFieldFone.setText(pac1.getPaciFone());
       jTextFieldEndereco.setText(pac1.getPaciEnd());
       jTextFieldCEP.setText(pac1.getPaciCep());
       jComboBoxBairro.setSelectedItem(pac1.getPaciBairro());
       
    }                                             

    private void jButtonExcluirPacienteActionPerformed(java.awt.event.ActionEvent evt) {                                                       
        resposta = JOptionPane.showConfirmDialog(rootPane,"Deseja excluir o Paciente");
        if(resposta==JOptionPane.YES_OPTION){
           pac.setPaciCod(Integer.parseInt(jTextFieldCodigoPaciente.getText()));
           pacdao.Excluir(pac);
        }
        jTextFieldNome.setText("");
        jFormattedTextFieldNascimento.setText("");
        jTextFieldRG.setText("");
        jFormattedTextFieldFone.setText("");
        jTextFieldEndereco.setText("");
        jTextFieldCEP.setText("");
        jTextFieldCodigoPaciente.setText("");
        jTextFieldPesquisarPaciente.setText("");
        jButtonSalvarPaciente.setEnabled(false);
    }                                                      

    private void jTablePacienteMouseClicked(java.awt.event.MouseEvent evt) {                                            
       String nome_paciente = ""+jTablePaciente.getValueAt(jTablePaciente.getSelectedRow(),0);
       conex.conexao();
       conex.executaSQL("select * from paciente where c_nomepaciente='"+nome_paciente+"'");
       try{
           conex.rs.first();
           jTextFieldCodigoPaciente.setText(String.valueOf(conex.rs.getInt("n_numepaciente")));
           jTextFieldNome.setText(conex.rs.getString("c_nomepaciente"));
           jFormattedTextFieldNascimento.setText(conex.rs.getString("d_nascpaciente"));
           jTextFieldRG.setText(conex.rs.getString("c_idpaciente"));
           jFormattedTextFieldFone.setText(conex.rs.getString("c_telepaciente"));
           jTextFieldEndereco.setText(conex.rs.getString("c_endpaciente"));
           jTextFieldCEP.setText(conex.rs.getString("c_cepaciente"));
           
           ConexaoBD conexPesquisa = new ConexaoBD();
           conexPesquisa.conexao();
           conexPesquisa.executaSQL("select * from bairro where n_numebairro ="+conex.rs.getInt("n_numepacbairro"));
           conexPesquisa.rs.first();
           jComboBoxBairro.setSelectedItem(conexPesquisa.rs.getString("c_nomebairro"));
           conexPesquisa.desconecta();
           
       }catch(SQLException ex){
           JOptionPane.showMessageDialog(null,"ERRO AO SELECIONAR O ITEM NA TABELA /n"+ex);
       }
       
       conex.desconecta();
    }                                           

    private void jComboBoxBairroActionPerformed(java.awt.event.ActionEvent evt) {                                                
