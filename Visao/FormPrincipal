    }                                             

    private void jMenuItemMedicosActionPerformed(java.awt.event.ActionEvent evt) {                                                 
        try{
        conecta.executaSQL("select * from usuario where c_nomeusuario='"+ jLabelUsuario.getText()+"'");
        conecta.rs.first();
        if(conecta.rs.getString("c_tipousuario").equals("Administrador")){
            if(telaMed==null){
                telaMed = new FormMedico();
                telaMed.setVisible(true);
                telaMed.setResizable(false);
            }else{
                telaMed.setVisible(true);
                telaMed.setResizable(false);
            }
        //FormMedico tela = new FormMedico();
        //tela.setVisible(true);
        }else{
            JOptionPane.showMessageDialog(null, "usuario sem permissao");
        }
            
        }catch(SQLException ex){
            JOptionPane.showMessageDialog(null, "usuario sem permissao" +ex);
        }
    }                                                

    private void jButtonCadMedicosActionPerformed(java.awt.event.ActionEvent evt) {                                                  
        try{
        conecta.executaSQL("select * from usuario where c_nomeusuario='"+ jLabelUsuario.getText()+"'");
        conecta.rs.first();
        if(conecta.rs.getString("c_tipousuario").equals("Administrador")){
             
            if(telaMed==null){
                telaMed = new FormMedico();
                telaMed.setVisible(true);
                telaMed.setResizable(false);
            }else{
                telaMed.setVisible(true);
                telaMed.setResizable(false);
            }    
       // FormMedico tela = new FormMedico();
        //tela.setVisible(true);
        }else{
            JOptionPane.showMessageDialog(null, "usuario sem permissao");
        }
            
        }catch(SQLException ex){
            JOptionPane.showMessageDialog(null, "usuario sem permissao" +ex);
        }
    }                                                 

    private void jMenuItemUsuariosActionPerformed(java.awt.event.ActionEvent evt) {                                                  
        try{
        conecta.executaSQL("select * from usuario where c_nomeusuario='"+ jLabelUsuario.getText()+"'");
        conecta.rs.first();
        if(conecta.rs.getString("c_tipousuario").equals("Administrador")){
         
            if(telaUsu==null){
                telaUsu = new FormUsuario();
                telaUsu.setVisible(true);
                telaUsu.setResizable(false);
            }else{
                telaUsu.setVisible(true);
                telaUsu.setResizable(false);
            }       
        //FormUsuario tela = new FormUsuario();
        //tela.setVisible(true);
        }else{
            JOptionPane.showMessageDialog(null, "usuario sem permissao");
        }
            
        }catch(SQLException ex){
            JOptionPane.showMessageDialog(null, "usuario sem permissao" +ex);
        }
    }                                                 

